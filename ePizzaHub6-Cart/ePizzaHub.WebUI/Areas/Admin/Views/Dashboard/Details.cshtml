@model ePizzaHub.Repositories.Models.OrderModel
@{
    ViewData["Title"] = "Details";
}

<h2>Информация о заказе</h2>
<hr />
<dl class="row">
    <dt class="col-sm-2">
        Id Заказа
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Id)
    </dd>
    <dt class="col-sm-2">
        Дата Заказа
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.CreatedDate)
    </dd>
    <dt class="col-sm-2">
        Общая Сумма Заказа
    </dt>
    <dd class="col-sm-10">
        ₽@Html.DisplayFor(model => model.GrandTotal)
    </dd>
</dl>
<table class="table">
    <thead>
        <tr>
            <th colspan="2">
                Детали Заказ
            </th>
            <th>
                Описание
            </th>
            <th>
                Цена
            </th>
            <th>
                Количество
            </th>
            <th>
                Всего
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>
                    <img src="@item.ImageUrl" style="width:200px" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    ₽@Html.DisplayFor(modelItem => item.UnitPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    ₽@Html.DisplayFor(modelItem => item.Total)
                </td>
            </tr>
        }
    </tbody>
</table>
<p>
    <a asp-action="Index" asp-controller="Dashboard" class="btn btn-outline-primary">Назад</a>
</p>
