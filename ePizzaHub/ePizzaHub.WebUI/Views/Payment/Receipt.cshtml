@model ePizzaHub.Entities.PaymentDetails

@{
    ViewData["Title"] = "Receipt";
}

<h1>Квитанция</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Email
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            Id
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            Сумма
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Currency) @(Model.GrandTotal/100)
        </dd>
        <dt class="col-sm-2">
            Статус
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index" asp-controller="Order" asp-area="User" class="btn btn-success">Перейди к деталям заказа</a>
</div>

