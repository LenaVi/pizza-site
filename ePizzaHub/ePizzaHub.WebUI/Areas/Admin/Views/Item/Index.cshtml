@model IEnumerable<ePizzaHub.Entities.Item>

@{
    ViewData["Title"] = "Index";
}

<h1>
    Меню <span class="float-right"><a asp-action="Create" class="btn btn-outline-primary">Добавить Блюдо</a></span>
</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Название
            </th>
            <th>
                Опиание
            </th>
            <th>
                Цена
            </th>
            <th>
                Изображение
            </th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UnitPrice)
                </td>
                <td>
                    <img src="@item.ImageUrl" class="w-75" />
                </td>
                <td>
                    @Html.ActionLink("Изменить", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Удалить ", "Delete", new { id = item.Id, url= item.ImageUrl })
                </td>
            </tr>
        }
    </tbody>
</table>
